html, body
  height 100%

body
  margin 0
  overflow hidden
  background radial-gradient(circle, light-red, dark-red)
  
.pane
  position absolute
  width 100%
  height 100%
  transition left 0.25s ease-in-out
  
.left.pane
  left -100%
  
.middle.pane
  left -100%
  
.selected.pane + .middle.pane
  left 100%

.right.pane
  left 100%
  
.selected.pane
  left 0